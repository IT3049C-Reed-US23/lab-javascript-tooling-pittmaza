{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    //I use the prettier extension to format code
    "no-const-assign": 2,
    "no-var": "error",
    "indent": [2, 2],
    "quotes": [2, "backtick"],
    "eqeqeq": "error"
  },
  "eslintConfig": {
    "extends": ["plugin:cypress/recommended"]
  }
}
